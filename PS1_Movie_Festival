// All Accepted

#pragma GCC optimize ("Ofast")
#pragma GCC optimize ("unroll-loops")
 
#include <bits/stdc++.h>
using namespace std;
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);
    int n,ctr = 1;
    cin >> n;
    int a[n],b[n];
    for(int i = 0;i<n;i++)
    {
        cin >> a[i] >> b[i];
    }
    vector < pair <int,int> > v;
    for(int i = 0;i<n;i++)
    {
        v.push_back({b[i], a[i]});
    }
    std::sort(v.begin(), v.end(), [](auto &left, auto &right) {
        return left.first < right.first;
    });
    // sort(v.begin(),v.end());
    int k = v[0].first;
    // v.erase(v.begin());
    for(int i = 1;i<n;i++)
    {
        int m = v[i].second;
        if(m >= k)
        {
            ctr++;
            k = v[i].first;
        }
    }
    cout << ctr;
    return 0;
}
