// All Accepted

#pragma GCC optimize ("Ofast")
#pragma GCC optimize ("unroll-loops")
 
#include <bits/stdc++.h>
using namespace std;
 
int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int n,x,ctr = 0;
    cin >> n >> x;
    int p[n],check[n];
    for(int i = 0;i<n;i++)
    {
        check[i] = 0;
    }
    for(int i = 0;i<n;i++)
    {
        cin >> p[i];
    }
    sort(p,p+n, greater<int>());
    int o = 0;
    for(int i = 0;i<n;i++)
    {
        if(!check[i])
        {
            if(p[i] + p[n-1-o] <= x)
            {
                ctr++;
                check[n-1-o] = 1;
                o++;
            }
            else
            {
                ctr++;
            }
        }
    }
    cout << ctr;
    return 0;
}
